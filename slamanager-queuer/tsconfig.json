{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": ".",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "@/config/*": ["config/*"],
      "@/modules/*": ["modules/*"],
      "@/services/*": ["services/*"],
      "@/analyzers/*": ["analyzers/*"],
      "@/types/*": ["types/*"]
    },
    "allowJs": true,
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true
  },
  "exclude": ["**/node_modules", "**/.*/", "**/build/"]
}
