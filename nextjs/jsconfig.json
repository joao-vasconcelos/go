{
  "compilerOptions": {
    // Using "baseUrl" allows you to use absolute paths
    "baseUrl": ".",
    // Using "paths" allows you to configure module path aliases
    "paths": {
      "@/authentication/*": ["authentication/*"],
      "@/styles/*": ["styles/*"],
      "@/forms/*": ["forms/*"],
      "@/components/*": ["components/*"],
      "@/hooks/*": ["hooks/*"],
      "@/helpers/*": ["helpers/*"],
      "@/contexts/*": ["contexts/*"],
      "@/scripts/*": ["scripts/*"],
      "@/services/*": ["services/*"],
      "@/schemas/*": ["schemas/*"],
      "@/translations/*": ["translations/*"]
    }
  }
}
